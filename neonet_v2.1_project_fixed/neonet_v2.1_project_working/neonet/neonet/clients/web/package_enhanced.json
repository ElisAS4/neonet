{
  "name": "neonet-client-enhanced",
  "version": "2.0.0",
  "description": "NeoNet Enhanced - Internet Offline-First P2P Client with Advanced Synchronization",
  "main": "src/main_enhanced.js",
  "scripts": {
    "start": "webpack serve --config webpack_enhanced.config.js --mode development",
    "dev": "webpack --config webpack_enhanced.config.js --mode development --watch",
    "build": "webpack --config webpack_enhanced.config.js --mode production",
    "build:analyze": "ANALYZE=true npm run build",
    "serve": "webpack serve --config webpack_enhanced.config.js --mode production",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run test:coverage",
    "deploy": "npm run build && npm run deploy:static",
    "deploy:static": "echo 'Deploy to static hosting'",
    "validate": "npm run lint && npm run test",
    "size": "bundlesize",
    "audit:security": "npm audit --audit-level moderate",
    "audit:licenses": "license-checker --summary",
    "docs": "jsdoc -c jsdoc.config.json",
    "benchmark": "node scripts/benchmark.js",
    "offline-test": "node scripts/offline-test.js"
  },
  "keywords": [
    "p2p",
    "offline-first",
    "blockchain",
    "dapp",
    "decentralized",
    "sync",
    "crdt",
    "pwa",
    "service-worker",
    "indexeddb"
  ],
  "author": "NeoNet Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neonet/neonet-client.git"
  },
  "bugs": {
    "url": "https://github.com/neonet/neonet-client/issues"
  },
  "homepage": "https://neonet.io",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.0",
    "bundlesize": "^0.18.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdoc": "^4.0.2",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "workbox-webpack-plugin": "^6.6.0"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "localforage": "^1.10.0",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.7.0",
    "idb": "^7.1.1",
    "dexie": "^3.2.4",
    "uuid": "^9.0.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "eventemitter3": "^5.0.1"
  },
  "optionalDependencies": {
    "webrtc-adapter": "^8.2.3",
    "peerjs": "^1.4.7"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/sw*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@p2p/(.*)$": "<rootDir>/src/p2p/$1",
      "^@ui/(.*)$": "<rootDir>/src/ui/$1",
      "^@platform/(.*)$": "<rootDir>/src/platform/$1",
      "^@blockchain/(.*)$": "<rootDir>/src/blockchain/$1",
      "^@dapps/(.*)$": "<rootDir>/mock-dapps/$1"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "serviceworker": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "indexedDB": "readonly",
      "IDBKeyRange": "readonly",
      "RTCPeerConnection": "readonly",
      "webkitRTCPeerConnection": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "bundlesize": [
    {
      "path": "./dist/main.*.js",
      "maxSize": "200kb"
    },
    {
      "path": "./dist/app.*.js",
      "maxSize": "300kb"
    },
    {
      "path": "./dist/vendors.*.js",
      "maxSize": "400kb"
    },
    {
      "path": "./dist/css/*.css",
      "maxSize": "50kb"
    }
  ],
  "config": {
    "offline_first": true,
    "enable_p2p": true,
    "enable_sync": true,
    "enable_cache": true,
    "max_cache_size": "100MB",
    "sync_interval": 30000,
    "health_check_interval": 60000
  },
  "pwa": {
    "name": "NeoNet Enhanced",
    "short_name": "NeoNet",
    "description": "Internet Offline-First P2P Client",
    "theme_color": "#2196F3",
    "background_color": "#ffffff",
    "display": "standalone",
    "orientation": "portrait-primary",
    "start_url": "/",
    "scope": "/",
    "icons": [
      {
        "src": "icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/neonet"
  }
}

